<p id="notice"><%= notice %></p>

<h1>Costomers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Discription</th>
      <th>Blacklist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costomers.each do |costomer| %>
      <tr>
        <td><%= costomer.name %></td>
        <td><%= costomer.phone %></td>
        <td><%= costomer.discription %></td>
        <td><%= costomer.blacklist %></td>
        <td><%= link_to 'Show', costomer %></td>
        <td><%= link_to 'Edit', edit_costomer_path(costomer) %></td>
        <td><%= link_to 'Destroy', costomer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

